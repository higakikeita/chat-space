.chat-side
  .side-header
    .side-header__box
      .side-header__box__user-name
        = current_user.name
      .side-header__box__menu
        .side-header__box__menu--new-group
          =link_to new_group_path do
            %i.fas.fa-edit
        .side-header__box__menu--edit-user
          =link_to edit_user_path(current_user) do
            %i.fas.fa-cog
  .groups
    - current_user.groups.each do |group|
      .group
        =link_to group_messages_path(group) do
          .group-name
            =group.name
          .group-message
            

