.chat-main
  .main-header
    .main-header__left-box
      .main-header__left-box__current-group
        =@group.name
      .main-header__left-box__member-list
        Member:
        - @group.users.each do |group_user|
          =group_user.name
    .main-header__edit-btn
      =link_to "Edit",edit_group_path(@group),class:"edit-btn"
  .messages
    =render @messages
    
  .form
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: 'form__message', placeholder: 'type a message'
      .form__message__box
        = f.label :image, class: 'form__message__box__image' do
          = icon('fas', 'image', class: 'icon')
          = f.file_field :image, class: 'hidden'
      = f.submit 'Send', class: 'form__message__submit'
